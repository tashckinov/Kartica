generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  ownerId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cards       Card[]
}

model Card {
  id         Int      @id @default(autoincrement())
  term       String
  definition String
  example    String?
  image      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  groupId    Int
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model AdminIdentity {
  id             String   @id
  secretHash     String?
  claimTokenHash String?
  displayName    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
