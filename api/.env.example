# Prisma database connection
DATABASE_URL="file:./dev.db"

# Telegram bot token used to verify initData signatures when issuing admin tokens
ADMIN_TELEGRAM_BOT_TOKEN=""

# Secret used to sign admin access tokens (set to a strong random string in production)
ADMIN_TOKEN_SECRET="change-me"

# Optional: comma-separated list of allowed Telegram user IDs
# ADMIN_TELEGRAM_ALLOWED_USER_IDS="12345678,23456789"

# Optional: max age of Telegram initData in seconds (default 600)
# ADMIN_TELEGRAM_LOGIN_MAX_AGE_SECONDS="600"

# Optional: allowed origins for CORS (comma-separated)
# ADMIN_ALLOWED_ORIGINS="http://localhost:5173"
